#include <stdio.h>

 
void NhapMang(int a[], int n)
{
    for(int i = 0;i < n; i++)
    {
        printf("Nhap so thu %d: ", i+1);
        scanf("%d", &a[i]);
    }
}
 
void XuatMang(int a[], int n)
{
    for(int i = 0;i < n; i++)
    {
        printf("%d \t", a[i]);
    }
}
 
void ThemPhanTu(int a[],int n,int vitri,int so)
{
    
    for(int i = n ; i >vitri; i--)
    {
        a[i] = a[i-1];
    }
    
    a[vitri] = so;
    n++;
    
}
int main()
{
    int a[100];
    int n;
    printf("\nNhap so luong phan tu: ");
    scanf("%d",&n);
    NhapMang(a,n);
    XuatMang(a,n);
    int vitri, so;
    printf("\nNhap so can them: ");
    scanf("%d",&so);
    printf("\nNhap vi tri muon chen: ");
    scanf("%d",&vitri);
    ThemPhanTu(a,n,vitri,so);
    printf("\nMang sau khi them: ");
    XuatMang(a,n);
    
    
    
    
    return 0;
}