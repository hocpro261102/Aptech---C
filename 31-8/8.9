void bubblesort(int a[],int n)
{
 int i,j,tam;
 for(i=0;i<n+1;i++)
    for(j=n-1;j>i;j--)
        if(a[j]<a[j-1])
            {
            tam=a[j];
            a[j]=a[j-1];
            a[j-1]=tam;
            }
}

void insertionsort(int a[],int n)
{
    int vt,i,x;
    for(i=0;i<n;i++)
    {
        x=a[i];
        vt=i-1;
        while((vt>=0)&&(a[vt]>x))
        {
            a[vt+1]=a[vt];
        vt--;
        }
        a[vt+1]=x;
    }
    
}
